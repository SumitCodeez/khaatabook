<%- include('./partials/header.ejs') %> <% if(success.length>0){ %>
<div
  class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500"
>
  <span class="inline-block mt-1 mb-1 text-white"> <%= success %> </span>
</div>
<% } %> <% if(errors.length>0){ %>
<div
  class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500"
>
  <span class="inline-block mt-1 mb-1 text-white"> <%= errors %> </span>
</div>
<% } %>
<div class="logincontainer w-full h-[80%] flex items-center justify-center">
  <div class="loginpanel">
    <h3 class="text-2xl mb-3">Login</h3>
    <form action="/login" class="flex flex-col gap-2 items-start" method="post">
      <input
        class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md"
        type="text"
        placeholder="Email or Username"
        name="email"
      />
      <input
        class="block px-3 py-2 border-[1px] border-zinc-100 rounded-md"
        type="password"
        placeholder="password"
        name="password"
      />
      <% if(error.length > 0) { %>
      <div class="text-red-500 font-sm"><%= error %></div>
      <% } %>
      <input
        class="block px-4 py-2 bg-blue-500 rounded-md text-white"
        type="submit"
        value="Login"
      />
    </form>
    <a class="mt-5 inline-block text-blue-500" href="/register">
      Don't have an account ?
    </a>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
